    function editar(produtos){
      var p = JSON.parse(produtos);


      var div = document.getElementById('container-editar');

      var cod = document.getElementById('cd_prod');
      var qttd = document.getElementById('qt_prod');
      var embalagem = document.getElementById('tipo_embalagem');

      cod.value = p.cProd;
      qttd.value = p.qCom;
      embalagem.value=p.uCom;


      div.style.display='block';
      console.log(p.uCom);
    }
  
</script>

</html>